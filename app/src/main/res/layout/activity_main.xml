<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/old_paper"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/top_secret"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/cutive_mono"
        android:text="Welcome to the looping game"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imageView5"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@drawable/line"
        app:layout_constraintTop_toBottomOf="@id/textViewWelcome"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="5dp"/>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="229dp"
        android:src="@drawable/fingerprint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/button_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/cutive_mono"
        android:onClick="playGame"
        android:text="Play"
        android:textAllCaps="false"
        android:textSize="28sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/textViewWelcome"
        android:layout_marginTop="120dp"
        android:background="@drawable/rectangle"/>

    <Button
        android:id="@+id/button_how_to_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cutive_mono"
        android:text="Game Rules"
        android:onClick="rules"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@id/button_play"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"
        android:textSize="28sp" />
