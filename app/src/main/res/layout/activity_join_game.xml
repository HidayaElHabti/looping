<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinGameActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/color_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradient_list"/>

    <LinearLayout
        android:id="@+id/card_join"
        android:background="@drawable/card_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the game code"
        android:fontFamily="@font/open_sans"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="22sp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp" />

    <EditText
        android:id="@+id/edit_text_gameID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="mzVPtIRGDG4kYGr4o1hd"
        android:layout_gravity="center"
        android:textStyle="italic" />

    <Button
        android:id="@+id/button_join_game"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:onClick="joinGame"
        android:text="Join The Game"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/open_sans"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>